<div class="py-3"id="<%= dom_id post %>">

</div>

<div class="card" style="width: 25rem;">
  <div class="card-header bg-white">
    <div class="d-flex justify-content-between">
      <div>
          <% if post.user.profile_picture.attached? %>
            <%= image_tag post.user.profile_picture, class: " img-thumbnail rounded-circle", style: " width: 10%" %>
          <% else %>
            <%= image_tag "default_avatar.png", class: " img-thumbnail rounded-circle", style: " width: 10%" %>
          <% end %>
          <span class="fw-bold mx-2"><%= post.user.username %></span>
      </div>
      <div>
        <div class="dropdown">
          <a class="text-dark fs-4" style="text-decoration:none" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
            ...
          </a>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><a class="dropdown-item" href="#">Edit Post</a></li>
            <li><a class="dropdown-item" href="#">Delete Post</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="card-body">
    <div id="post<%= post.id %>_images" class="carousel slide" data-bs-ride="carousel" data-bs-ride="true">
      <div class="carousel-inner">
        <% post.images.each_with_index do |img, index| %>
          <div class="carousel-item <%= index == 0 ? 'active' : '' %>" style="width: 25rem">
            <%= image_tag img, class: "d-block w-100", style: "max-height: 100%; object-fit: cover;" %>
          </div>
        <% end %>
      </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#post<%= post.id %>_images" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#post<%= post.id %>_images" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      <div class="carousel-indicators dark" style="position:static" >
        <% post.images.each_with_index do |img, index| %>
          <button type="button" data-bs-target="#post<%= post.id %>_images" data-bs-slide-to="<%= index %>" class="<%= index == 0 ? 'active' : '' %> bg-dark" <%= index==0 ? 'aria-current="true"' : '' %> aria-label="<%= index+1 %>"></button>
        <% end %>
      </div>
    </div>
    <%= render 'posts/post_actions' , post: post %>
    <p class="card-text"><span class="fw-bold"><%= post.user.username %></span> <%= post.caption %></p>
    <small class="text-muted">About <%= time_ago_in_words(post.created_at) %></small>
  </div>
  <div class="card-footer d-flex justify-content-between bg-white">
    <input type="text" class="w-75" placeholder="Added a comment..." style="border:none" name="" id="">
    <a class="text-primary fw-bold" style="text-decoration:none" href="">Post</a>
  </div>
</div>

<script>
  document.getElementById("post<%= post.id %>_images").addEventListener("dblclick", function(){
    document.getElementById('post<%= post.id%>actions-likeBtn').click();
  })
</script>
